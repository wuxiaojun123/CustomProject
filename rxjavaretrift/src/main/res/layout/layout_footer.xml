<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/id_ll_footer"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:layout_gravity="center"
    android:layout_marginTop="3dp"
    android:gravity="center"
    android:orientation="horizontal">

    <com.example.wuxiaojun.rxjavaretrift.view.DilatingDotsProgressBar
        android:id="@+id/rcv_load_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:color="#fcc100"
        android:radius="3dp"
        app:dd_animationDuration="500"
        app:dd_endColor="#20fcc100"
        app:dd_horizontalSpacing="5dp"
        app:dd_numDots="3"
        app:dd_scaleMultiplier="1.5" />


    <TextView
        android:id="@+id/id_tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/dimen_text_12"
        android:gravity="center"
        android:text="@string/string_loading"
        android:textColor="@color/color_9" />

</LinearLayout>